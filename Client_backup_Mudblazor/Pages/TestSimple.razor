@page "/test-simple"
@inject NavigationManager Navigation

<PageTitle>Test Simple - ValyanMed</PageTitle>

<MudContainer MaxWidth="MaxWidth.Medium" Class="mt-4">
    <MudPaper Class="pa-4">
        <MudText Typo="Typo.h4" GutterBottom="true">?? ValyanMed Control Center</MudText>
        
        <MudAlert Severity="MudSeverity.Success">
            <strong>?? SUCCESS!</strong> Aplica?ia Blazor WebAssembly ruleaz? corect!
        </MudAlert>
        
        <MudStack Spacing="2" Class="mt-4">
            <MudText><strong>?? Current URL:</strong> @Navigation.Uri</MudText>
            <MudText><strong>?? Base URL:</strong> @Navigation.BaseUri</MudText>
            <MudText><strong>? Current Time:</strong> @DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")</MudText>
        </MudStack>
        
        <MudDivider Class="my-4" />
        
        <!-- Status Overview -->
        <MudText Typo="Typo.h6" GutterBottom="true">?? System Status</MudText>
        <MudStack Row Spacing="2" Class="mb-4">
            <MudButton Variant="Variant.Filled" 
                      Color="Color.Primary" 
                      Href="/status-check"
                      StartIcon="@Icons.Material.Filled.Monitor">
                System Status Check
            </MudButton>
            
            <MudButton Variant="Variant.Outlined" 
                      Color="Color.Error" 
                      Href="/error-monitor"
                      StartIcon="@Icons.Material.Filled.BugReport">
                Error Monitor
            </MudButton>
            
            <MudButton Variant="Variant.Filled" 
                      Color="Color.Success" 
                      Href="/quick-json-fix-test"
                      StartIcon="@Icons.Material.Filled.CheckCircle">
                JSON Fix Verification
            </MudButton>
        </MudStack>
        
        <MudText Typo="Typo.h6" GutterBottom="true">?? Debug & Test Tools</MudText>
        <MudStack Row Spacing="2" Class="mb-4">
            <MudButton Variant="Variant.Outlined" 
                      Color="Color.Info" 
                      Href="/debug-auth"
                      StartIcon="@Icons.Material.Filled.BugReport">
                Debug Authentication
            </MudButton>
            
            <MudButton Variant="Variant.Outlined" 
                      Color="Color.Error" 
                      Href="/auth-debug"
                      StartIcon="@Icons.Material.Filled.Security">
                Auth State Debug
            </MudButton>
            
            <MudButton Variant="Variant.Outlined" 
                      Color="Color.Secondary" 
                      Href="/api-test"
                      StartIcon="@Icons.Material.Filled.Api">
                Test API Connectivity
            </MudButton>
            
            <MudButton Variant="Variant.Outlined" 
                      Color="Color.Success" 
                      Href="/test-persoane-data"
                      StartIcon="@Icons.Material.Filled.DataObject">
                Test Persoane Data
            </MudButton>
            
            <MudButton Variant="Variant.Outlined" 
                      Color="Color.Warning" 
                      Href="/json-enum-test"
                      StartIcon="@Icons.Material.Filled.Transform">
                JSON Enum Test
            </MudButton>
        </MudStack>
        
        <MudText Typo="Typo.h6" GutterBottom="true">??? Admin Tools</MudText>
        <MudStack Row Spacing="2" Class="mb-4">
            <MudButton Variant="Variant.Filled" 
                      Color="Color.Warning" 
                      Href="/admin/data-cleanup"
                      StartIcon="@Icons.Material.Filled.CleaningServices">
                Data Cleanup & Diagnostics
            </MudButton>
        </MudStack>
        
        <MudText Typo="Typo.h6" GutterBottom="true">?? Application Pages</MudText>
        <MudStack Row Spacing="2" Class="mb-4">
            <MudButton Variant="Variant.Text" 
                      Color="Color.Info" 
                      Href="/persoane"
                      StartIcon="@Icons.Material.Filled.People">
                Persoane Management
            </MudButton>
            
            <MudButton Variant="Variant.Text" 
                      Color="Color.Warning" 
                      Href="/authentication/persoane"
                      StartIcon="@Icons.Material.Filled.Security">
                Persoane (Authenticated)
            </MudButton>
            
            <MudButton Variant="Variant.Text" 
                      Color="Color.Success" 
                      Href="/dashboard"
                      StartIcon="@Icons.Material.Filled.Dashboard">
                Dashboard
            </MudButton>
        </MudStack>
        
        <MudText Typo="Typo.h6" GutterBottom="true">?? Authentication</MudText>
        <MudStack Row Spacing="2" Class="mb-4">
            <MudButton Variant="Variant.Text" 
                      Color="Color.Primary" 
                      Href="/login"
                      StartIcon="@Icons.Material.Filled.Login">
                Login Page
            </MudButton>
        </MudStack>
        
        <MudDivider Class="my-4" />
        
        <MudAlert Severity="MudSeverity.Info" Dense="true">
            <strong>?? Quick Debugging Tips:</strong>
            <br />1. ?? Start with "System Status Check" for overview
            <br />2. ?? Use "Debug Authentication" for login issues
            <br />3. ?? Test data loading with "Test Persoane Data"
            <br />4. ?? Run "Data Cleanup" if you see enum errors
        </MudAlert>
        
        <MudDivider Class="my-4" />
        
        <MudAlert Severity="MudSeverity.Success" Dense="true">
            <strong>?? Current Status:</strong>
            <br />? Blazor WebAssembly - Running
            <br />? Client Application - Loaded
            <br />? Navigation - Working
            <br />?? Ready for testing and debugging!
        </MudAlert>
    </MudPaper>
</MudContainer>